upstream stustapay_administration_api {
    server localhost:8081;
}

upstream stustapay_terminal_api {
    server localhost:8082;
}

upstream stustapay_customerportal_api {
    server localhost:8083;
}

server {
    listen 80;
    listen [::]:80;

    server_name _;

    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name <customerportal.my-ssp-domain>;
    charset utf-8;

    # access_log /var/log/nginx/stustapay_customerportal_access.log;
    error_log /var/log/nginx/stustapay_customerportal_error.log;

    location /api {
        proxy_pass http://stustapay_customerportal_api;

        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_buffering off;
        proxy_redirect off;
    }

    root /usr/share/stustapay/web/customerportal;
    index index.html;
    location / {
        try_files $uri /index.html =404;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name <admin.my-ssp-domain>;
    charset utf-8;

    # access_log /var/log/nginx/stustapay_administration_access.log;
